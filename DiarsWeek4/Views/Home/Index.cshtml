@model IEnumerable<DiarsWeek4.Models.Producto>

<h2>Listado de Productos</h2>

@if (Model != null && Model.Any())
{
    <table class="table">
        <thead>
            <tr>
                <th>SKU</th>
                <th>Nombre</th>
                <th>Stock</th>
                <th>Precio</th>
                <th>Estado</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Sku</td>
                    <td>@item.Nombre</td>
                    <td>@item.Stock</td>
                    <td>@item.Precio</td>
                    <td>@item.Estado</td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning">Editar</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div class="alert alert-info">
        No hay productos registrados.
    </div>
}
